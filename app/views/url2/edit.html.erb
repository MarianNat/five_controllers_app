<div class="form_wrap">
  <h3>Edit profile data</h3>
  <div class="form">
    <%= form_for(@user, url: url2_update_path(@user), method: :put) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :about %>
      <%= f.text_field :about %>
      <%= f.submit 'Edit' %>
    <% end %>
  </div>
  <%= link_to 'Delete data', url2_destroy_path, method: :delete %>
  <%= link_to 'Back', url2_index_path %>
</div>